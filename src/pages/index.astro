---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../layouts/Layout.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <header class="sticky top-0 backdrop-blur-3xl">
    <div
      class="mx-auto flex max-w-4xl place-content-stretch place-items-center gap-2 p-4"
    >
      <img src="/icons/brain.svg" alt="a" class="h-6 w-6" />
      Nakada Lab / 中田研究室
      <a
        href="https://github.com/nakada-lab"
        class="ml-auto"
        target="_blank"
        rel="”noreferrer”"
      >
        <img src="/icons/github.svg" alt="a" class="h-6 w-6" />
      </a>
    </div>
  </header>
  <main
    class="mx-auto grid min-h-[calc(100dvh_-_3.5rem)] max-w-4xl place-content-stretch place-items-center gap-4 p-4"
  >
    <div
      class="flex flex-col place-items-center gap-8 p-4 lg:col-span-3 lg:flex-row"
    >
      <img
        src="https://github.com/nakada-lab.png"
        alt="icon"
        class="h-64 w-64 rounded-full"
      />
      中田 尚
      <br />
      Takashi Nakada
      <br />
      大阪国際工科専門職大学 准教授
      <br />
      Associate Professor at IPUT Osaka
      <br />
    </div>
  </main>
</Layout>
